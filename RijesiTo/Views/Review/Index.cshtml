@using RijesiTo.ViewModels
@model List<ReviewViewModel>
@{
    ViewData["Title"] = "All Reviews";
}

<h2>Reviews</h2>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Reviewer</th>
            <th>Reviewer Type</th>
            <th>Rating</th>
            <th>Comment</th>
            <th>Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var review in Model)
        {
            <tr>
                <td>@review.ReviewerType</td>
                <td>@review.ReviewerName</td>
                <td>
                    @for (int i = 1; i <= 5; i++)
                    {
                        <span class="@(i <= review.Rating ? "text-warning" : "text-muted")">
                            @(i <= review.Rating ? "★" : "☆")
                        </span>
                    }
                </td>
                <td>@review.Comment</td>
                <td>@review.ReviewDate.ToLocalTime().ToString("g")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@review.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@review.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
