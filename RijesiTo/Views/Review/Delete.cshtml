@using RijesiTo.ViewModels
@model ReviewViewModel
@{
    ViewData["Title"] = "Delete Review";
}

<h2>Confirm Delete</h2>

<div class="alert alert-warning">
    Are you sure you want to delete this review?
</div>

<dl class="row">
    <dt class="col-sm-3">Reviewer</dt>
    <dd class="col-sm-9">@Model.ReviewerName</dd>

    <dt class="col-sm-3">Rating</dt>
    <dd class="col-sm-9">
        @for (int i = 1; i <= 5; i++)
        {
            <span class="@(i <= Model.Rating ? "text-warning" : "text-muted")">
                @(i <= Model.Rating ? "★" : "☆")
            </span>
        }
    </dd>

    <dt class="col-sm-3">Comment</dt>
    <dd class="col-sm-9">@Model.Comment</dd>
</dl>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
